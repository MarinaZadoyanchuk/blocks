{
  "name": "Buttons 2",
  "general": {
    "fontFamily": "'Montserrat', sans-serif",
    "borderWidth": "1px"
  },
  "size": {
    "sm": {
      "padding": "10px 16px",
      "borderRadius": "5px",
      "fontSize": "14px"
    },
    "md": {
      "padding": "14px 20px",
      "borderRadius": "5px",
      "fontSize": "14px"
    },
    "lg": {
      "padding": "18px 30px",
      "borderRadius": "5px",
      "fontSize": "16px"
    }
  },
  "settings": {
    "primary": {
      "default": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"],
        "border": {
          "color": ["transparent"]
        }
      },
      "hover": {
        "bg": {
          "color": ["darkShade", "lightShade"]
        },
        "color": ["lightShade", "darkShade"]
      }
    },
    "primaryAlt": {
      "default": {
        "bg": {
          "color": ["darkShade", "lightShade"]
        },
        "color": ["lightShade", "darkShade"],
        "border": {
          "color": ["transparent"]
        }
      },
      "hover": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"]
      }
    },
    "secondary": {
      "default": {
        "bg": {
          "color": ["transparent"]
        },
        "color": ["darkShade?lighten=32.55", "lightShade"],
        "border": {
          "color": ["darkShade?lighten=32.55", "lightShade"]
        }
      },
      "hover": {
        "bg": {
          "color": ["darkShade?lighten=32.55", "lightShade"]
        },
        "color": ["lightShade", "darkShade"]
      }
    },
    "secondaryAlt": {
      "default": {
        "bg": {
          "color": ["transparent"]
        },
        "color": ["darkShade?lighten=32.55", "lightShade"],
        "border": {
          "color": ["brand"]
        }
      },
      "hover": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"]
      }
    }
  }
}
