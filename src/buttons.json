{
  "name": "Buttons 1",
  "general": {
    "fontFamily": "'Montserrat', sans-serif",
    "borderWidth": "1px"
  },
  "size": {
    "sm": {
      "padding": "12px 15px",
      "borderRadius": "5px",
      "fontSize": "11px"
    },
    "md": {
      "padding": "14px 20px",
      "borderRadius": "5px",
      "fontSize": "11px"
    },
    "lg": {
      "padding": "24px 30px",
      "borderRadius": "5px",
      "fontSize": "11px"
    }
  },
  "settings": {
    "primary": {
      "default": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"],
        "border": {
          "width": "1px",
          "style": "solid",
          "color": ["transparent"]
        }
      },
      "hover": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"],
        "shadow": {
          "x": 0,
          "y": "7px",
          "blur": "20px",
          "spread": 0,
          "color": ["brand?lighten=6&setAlpha=0.5"]
        }
      }
    },
    "primaryAlt": {
      "default": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"],
        "border": {
          "width": "1px",
          "style": "solid",
          "color": ["transparent"]
        }
      },
      "hover": {
        "bg": {
          "color": ["brand"]
        },
        "color": ["lightShade"]
      }
    },
    "secondary": {
      "default": {
        "bg": {
          "color": ["transparent", "lightShade"]
        },
        "color": ["darkShade?lighten=38.8", "darkShade"],
        "border": {
          "width": "1px",
          "style": "solid",
          "color": ["darkShade?lighten=38.8", "lightShade"]
        }
      },
      "hover": {
        "bg": {
          "color": ["lightShade?darken=7", "lightShade?setAlpha=0.2"]
        },
        "color": ["darkShade?lighten=38.8", "lightShade"]
      }
    },
    "secondaryAlt": {
      "default": {
        "bg": {
          "color": ["transparent", "lightShade"]
        },
        "color": ["darkShade?lighten=38.8", "darkShade"],
        "border": {
          "width": "1px",
          "style": "solid",
          "color": ["brand", "darkShade?lighten=38.8"]
        }
      },
      "hover": {
        "bg": {
          "color": ["lightShade?darken=7", "lightShade?setAlpha=0.2"]
        },
        "color": ["darkShade?lighten=38.8", "lightShade"]
      }
    }
  }
}
